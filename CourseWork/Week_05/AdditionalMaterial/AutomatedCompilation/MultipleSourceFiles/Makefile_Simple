# Makefile_Simple
# Simple version of the Makefile used to systematically compile pi.c, pi_1.c 
# and pi_2.c taking into account their respective dependencies, and produce 
# pi.x.
#
# Usage (one of two ways):
#   make -f Makefile_Simple
#
#   cp Makefile_Simple Makefile OR ln -sf Makefile_Simple Makefile
#   make

# Default target
all: pi.x

# pi.x (depends on pi.o, pi_1.o, pi_2.o)
pi.x: pi.o pi_1.o pi_2.o
	gcc pi.o pi_1.o pi_2.o -lm -o pi.x

# pi.o (depends on pi.c)
pi.o: pi.c
	gcc -Wall -g -pg -c pi.c

# pi_1.o (depends on pi_1.c)
pi_1.o: pi_1.c
	gcc -Wall -g -pg -c pi_1.c

# pi_2.o (depends on pi_1.c)
pi_2.o: pi_2.c
	gcc -Wall -g -pg -c pi_2.c

# Clean (delete pi.o, pi.x, pi_1.o, pi_2.o)
clean:
	rm -f pi.o pi.x
	rm -f pi_1.o
	rm -f pi_2.o
